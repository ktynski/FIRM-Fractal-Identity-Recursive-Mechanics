    "false_precision": {
      "patterns": [
        {
          "regex": "\\b(\\d+\\.\\d{4,})\\b(?!\\s*(?:Ã—|e[+-]?\\d+))",
          "replacement": "approximately {rounded_value}",
          "note": "Replace excessive decimal precision"
        },
        {
          "regex": "\\b(99\\.\\d+|100\\.0+)%\\b",
          "replacement": "~99%",
          "note": "Replace false percentage precision"
        }
      ]
    },
    "anthropomorphic": {
      "patterns": [
        {
          "regex": "(\\w+)\\s+(enables|chooses|decides|wants|intends)",
          "replacement": "\\1 produces/results in",
          "note": "Remove anthropomorphic agency"
        },
        {
          "regex": "(\\w+)\\s+(consumes|attacks|hunts)",
          "replacement": "\\1 acts on/affects",
          "note": "Remove predatory anthropomorphism"
        }
      ]
    }
